container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python fullMonteWeb/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python fullMonteWeb/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python fullMonteWeb/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "staticfiles/"
